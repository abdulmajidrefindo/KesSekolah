<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeFragmentLayout"
    tools:context=".ui.beranda.fragment.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light2"
            app:menu="@menu/nav_bar_search"
            android:paddingEnd="20dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/textGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hai,"
                    android:textSize="18sp"
                    android:textColor="@color/light4"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/primary3"
                    android:textSize="22sp"
                    android:fontFamily="@font/fredoka_medium"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner"/>

            <LinearLayout
                android:id="@+id/layoutMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/shadow_layout"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="-4dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/menu_materi_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Materi"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/light4"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/menu_video_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Video"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/light4"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/menu_tj_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Tanya Jawab"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/light4"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/menu_forum_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Forum"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/light4"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/menu_ahli_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Tanya Ahli"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/light4"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/menu_ebook_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="E-Book"
                            android:fontFamily="@font/fredoka_medium"
                            android:textColor="@color/light4"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_layout_materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materi"
                    android:textColor="@color/primary3"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/fredoka_medium" />

                <LinearLayout
                    android:id="@+id/cards_materi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_materi_1"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_materi_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_materi_1"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_materi_2"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_materi_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_materi_2"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_materi_3"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_materi_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_materi_3"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_materi_4"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/iv_materi_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_materi_4"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_layout_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textColor="@color/primary3"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/fredoka_medium" />

                <LinearLayout
                    android:id="@+id/cards_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_video_1"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_video_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_video_1"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_video_2"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_video_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_video_2"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/card_layout_ebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-book"
                    android:textColor="@color/primary3"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/fredoka_medium" />

                <LinearLayout
                    android:id="@+id/cards_ebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ebook_1"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_ebook_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_ebook_1"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ebook_2"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="18dp">

                        <ImageView
                            android:id="@+id/iv_ebook_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/image_card_ebook_2"
                            android:contentDescription="@string/image_preview" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
