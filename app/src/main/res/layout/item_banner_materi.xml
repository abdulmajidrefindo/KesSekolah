<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center|center_horizontal"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        >

        <TextView
            android:id="@+id/textTitle"
            style="@style/Theme.IniDesakuBeta.TextView.Medium11.500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="textEnd"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ilusBanner"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/ilusBanner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ilus_banner_3"
            />

        <TextView
            android:id="@+id/textNews"
            style="@style/Theme.IniDesakuBeta.Text.Headline4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Materi Baru\nSetiap Hari!"
            android:textAlignment="textStart"
            android:layout_marginStart="4dp"
            android:maxLines="3"
            app:layout_constraintTop_toTopOf="@id/textTitle"
            app:layout_constraintStart_toEndOf="@id/ilusBanner"
            app:layout_constraintBottom_toBottomOf="@id/ilusBanner"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>